---
import Icon from './Icon.astro';

interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
	link?: string;
}

const { align = 'center', tagline, title, link } = Astro.props;
---

<header class:list={['hero stack gap-4', align]}>
	<div class="stack gap-2">
		{!link && <h1 class="title">{title}</h1>}
		{ link && <a class="link" href={link} target="_blank"><h1 class="title">{title} <Icon icon="link" size="1em" /></h1></a>}
		{tagline && <p class="tagline">{tagline}</p>}
	</div>
	<slot />
</header>

<style>
	.hero {
		font-size: var(--text-lg);
		text-align: center;
	}

	.title,
	.tagline {
		max-width: 37ch;
		margin-inline: auto;
	}

	.title {
		font-size: var(--text-3xl);
		color: var(--gray-0);
	}

	.link{
		text-decoration: none;
	}

	@media (min-width: 50em) {
		.hero {
			font-size: var(--text-xl);
		}

		.start {
			text-align: start;
		}

		.start .title,
		.start .tagline {
			margin-inline: unset;
		}

		.title {
			font-size: var(--text-5xl);
		}
	}
</style>
